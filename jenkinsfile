pipeline {
  agent any 
  stages { 
   stage('Test') {
      steps {
        echo 'Testing...'
        snykSecurity(
          snykInstallation: 'Snyk',
          snykTokenId: 'snyktoken'
        )
      }
    }
    stage ('SAST') {
      steps {
        withSonarQubeEnv('SonarQube') {
          sh 'mvn package'
          sh 'mvn sonar:sonar'
        }
      }
   }
   stage ('Build') {
     steps {
         sh 'mvn clean package'
       }
   }
   stage ('Deploy-To-Tomcat') {
     steps {
       sshagent(['deploy_user']) {
         sh 'scp -o /var/lib/jenkins/workspace/cicd/target/webapp-project.war ubuntu@:3.108.223.2/apache-tomcat9:/etc/webapps/webapp-project.war'
              }      
           }       
    }
    
   stage ('DAST') {
     steps {
       sshagent(['zap']) {
         sh 'ssh -o  StrictHostKeyChecking=no ubuntu@34.238.83.145 "docker run -t owasp/zap2docker-stable zap-baseline.py -t http://3.108.223.2:8080/webapp-project/" || true'
        }
      }
    }
  }
}
  
