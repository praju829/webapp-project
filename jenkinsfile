pipeline {
  agent any 
  stages { 
   stage ('Check-Git-Secrets') {
      steps {
        sh 'docker run gesellix/trufflehog --json https://github.com/praju829/webapp-project.git > trufflehog'
        sh 'cat trufflehog'
      }
    }
   stage('Test') {
      steps {
        echo 'Testing...'
        snykSecurity(
          snykInstallation: 'Snyk',
          snykTokenId: 'snyktoken'
        )
      }
    }
   stage ('SAST') {
      steps {
        withSonarQubeEnv('SonarQube') {
          sh 'mvn package'
          sh 'mvn sonar:sonar'
        }
      }
   }
   stage ('Build') {
      steps {
        sh 'mvn clean package'
       }
   }
   stage ('Deploy-To-Tomcat') {
      steps {
       sshagent(['deploy_user']) {
         sh 'scp -o StrictHostKeyChecking=no target/*.war ubuntu@3.111.171.176:/var/lib/tomcat9/webapps/webapp-project.war'
              }      
           }       
    }
    
   stage ('DAST') {
      steps {
       sshagent(['zap']) {
         sh 'ssh -o  StrictHostKeyChecking=no ubuntu@44.202.130.42 "docker run -t owasp/zap2docker-stable zap-baseline.py -t http://3.111.171.176:8080/webapp-project/" || true'
        }
      }
    }
  }
}
  
